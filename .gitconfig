[alias]
	b = branch
	co = checkout
	st = status
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	dt = difftool -d
	dn = diff --name-only master
	wt = worktree

[diff]
	tool = meld

[difftool]
	prompt = false

[push]
	default = current
	autoSetupRemote = true

[user]
	email = ctil@users.noreply.github.com
	name = ctil

[pull]
	ff = only

[core]
	editor = nvim
	pager = less -F -X
